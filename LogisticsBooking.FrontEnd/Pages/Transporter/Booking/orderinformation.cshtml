@page
@model LogisticsBooking.FrontEnd.Pages.Transporter.Booking.orderinformation
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout_Transporter";
}

<div class="py-1" style="">
    <div class="container">

            <!-- Horizontal Steppers -->
            <div class="row">
                <div class="col-md-12">

                    <!-- Stepers Wrapper -->
                    <ul class="stepper stepper-horizontal">

                        <!-- First Step -->
                        <li class="completed">
                            <a href="#!">
                                <span class="circle"><i class="fas fa-check"></i></span>
                                <span class="label">Opret Ordre</span>
                            </a>
                        </li>

                        <!-- Second Step -->
                        <li class="active">
                            <a href="#!">
                                <span class="circle"><i class="fas fa-check"></i></span>
                                <span class="label">Oplysninger</span>
                            </a>
                        </li>
                        
                        <!-- Third Step -->
                        <li class="">
                            <a href="#!">
                                <span class="circle">3</span>
                                <span class="label">Tidspunkt</span>
                            </a>
                        </li>
                        
                        <!-- Third Step -->
                        <li class="">
                            <a href="#!">
                                <span class="circle">3</span>
                                <span class="label">Gennemført</span>
                            </a>
                        </li>

                    </ul>
                    <!-- /.Stepers Wrapper -->

                </div>
            </div>


    </div>
</div>  


<div class="py-1" style="">
    <div class="container-fluid">
        <div class="row" >
            <div class="mx-auto p-4 col-lg-4">
                <form method="post">
                    <div class="form-group"><label class="paddingleftbookingform">Angiv leverandør</label>
                        
                        @if (Model.Transporters == null)
                        {
                            <select class="form-control"  ></select>
                        }                   
                        <select class="form-control" asp-for="OrderViewModel.SupplierName" asp-items="Model.Transporters"></select>
                        
                        
                        
                        
                    </div>

                    <div class="form-group"><label class="paddingleftbookingform">Angiv samlet antal bundpaller på denne ordre</label><input asp-for="OrderViewModel.BottomPallets" type="number" class="form-control" id="form29" placeholder="Antal Paller"></div>
                    <div class="form-group "><label class="paddingleftbookingform">Angiv paller i alt på ordren</label><input asp-for="OrderViewModel.totalPallets" type="number" class="form-control" id="form29" placeholder="Antal Paller"></div>
                    <div class="form-group "><label class="paddingleftbookingform">Angiv Ordre reference nummer </label><input asp-for="OrderViewModel.orderNumber" type="number" class="form-control" id="form29" placeholder="Ordre refnr"></div>

                    <div class="form-group "><label class="paddingleftbookingform">Kommentar til ordren</label><textarea  asp-for="OrderViewModel.Comment" class="form-control"></textarea></div>
                    <div class="form-group display-spacebetween"><label class="paddingleftbookingform">Angiv om ordren er af typen ind eller ud</label><select asp-for="OrderViewModel.InOut"> <option value="Ind">Ind</option> <option value="Ud">Ud</option></select></div>

                  
                    <span asp-validation-for="OrderViewModel.Comment" class="text-danger"></span>
                    <div class="display-center">
                        <button type="submit"  class="btn btn-primary">Tilføj ordre</button>
                       

                    </div>

                </form>
            </div>
            <div class="mx-auto p-4 col-lg-8 currently-booking">
                <form method="post">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-6">
                                <h1>Ordreoversigt</h1>
                            </div> 
                            <div class="col-lg-6 display-center">
                                @if (@Model.BookingViewModel.ExternalId == null)
                                {
                                    <span> Ordrenummer: xxxxxx</span>
                                }
                                else
                                {
                                    <span> Ordrenummer: @Model.BookingViewModel.ExternalId</span>
                                }
                                
                            </div> 
                        </div>
                        
                        <div class="row">
                        
                    
                    
                    
                    @if (Model.BookingViewModel.PalletsRemaining == 0)
                    {
                        <div class="col-lg-12">
                            <span class="text-success"> Der mangler 0 paller at bliver booket</span>
                        </div> 
                        
                    }
                    else if (Model.BookingViewModel.PalletsRemaining < 0)
                    {
                        <div class="col-lg-12">
                            <span class="text-danger"> Der er booket for mange paller i forhold til hvad der er valgt</span>
                        </div> 
                       
                    } else 
                    {
                        <div class="col-lg-12">
                            <span>Der mangler at blive booket<b class="font-weight-bold"> @Model.BookingViewModel.PalletsRemaining</b> paller</span>
                        </div> 
                        
                    }
                        </div>
            </div>
                    <hr class="hr-smaller"></hr>
                    <div class="container">
                        <div class="row py-2-bottom">
                            <div class="col-2">
                                <span class="font-weight-bold">Booking ID</span>
                            </div>
                            
                            <div class="col-2">
                                <span class="font-weight-bold">OrdreNr</span>
                            </div>
                            <div class="col-2">
                                <span class="font-weight-bold">Leverandør</span>
                            </div>
                           
                            <div class="col-2">
                                <span class="font-weight-bold">Bundpaller</span>
                            </div>
                            <div class="col-2">
                                <span class="font-weight-bold">Paller totalt</span>
                            </div>
                            <div class="col-2">
                                <span class="font-weight-bold">Slet</span>
                            </div>
                        </div>
                        <hr class="hr-smaller"></hr>
                        
                        
                       @if (Model.BookingViewModel.OrderViewModels != null)
                       {
                           foreach (OrderViewModel orderViewModel in Model.BookingViewModel.OrderViewModels)
                            {
                                
                                    <div class="row">
                                        <div class="col-2">
                                            <p>@orderViewModel.ExternalId</p>
                                        </div>
                                    
                                        <div class="col-2">
                                            <span>@orderViewModel.orderNumber</span>
                                        </div>
                                        <div class="col-2">
                                            <span>@orderViewModel.SupplierName</span>
                                        </div>
                                    
                                        <div class="col-2">
                                            <span>@orderViewModel.BottomPallets</span>
                                        </div>
                                         <div class="col-2">
                                             <span>@orderViewModel.totalPallets</span>                                         
                                             </div>
                                        <div class="col-2">
                                            <a asp-page="orderinformation" asp-page-handler="Delete" asp-route-orderId="@orderViewModel.id"><i class="fas fa-minus-circle"></i></a>
                                        </div>
                                    
                                    </div>
                               
                                
                            
                                <div class="hr-smaller">
                                
                                
                                </div>
                            }    
                       }
                       
                       <hr class="hr-thick"></hr>
                       <div>
                           
                       </div>
                       
                      
                      
                           @if (Model.BookingViewModel.PalletsRemaining == 0)
                           {
                               <div class=" row justify-content-center p2">
                                   <button type="submit" asp-page="./select_time"  class="btn btn-success">Bekræft Booking</button>
                               </div>
                           }
                           
                           
                               
                              
                        
                    </div>
                    
                </form>
            </div>
        </div>
    </div>
</div>