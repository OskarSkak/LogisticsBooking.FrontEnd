@page
@using System.Xml.Linq
@model LogisticsBooking.FrontEnd.Pages.Transporter.Booking.BookOrder

@{
    Layout = "_Layout_Transporter";
}
<style>
.popover> .arrow {
    border-width: 16px;
}
    
    </style>


@if (Model.ShowMessage)
{
    <div class="alert alert-danger">
        <strong>@Model.ScheduleAvailableMessage</strong> 
    </div>
}

<div class="py-1" style="">
    <div class="container">
  <div class="md-stepper-horizontal blue">
      <div class="md-step active ">
        <div class="md-step-circle"><span></span><i style="transform: scaleX(-1);" class="fas fa-pencil-alt"></i></div>
        <div class="md-step-title">Leveringsdag</div>
        <div class="md-step-bar-left"></div>
        <div class="md-step-bar-right"></div>
      </div>
      <div class="md-step ">
        <div class="md-step-circle"><span>2</span></div>
        <div class="md-step-title">Opret Ordrer</div>
          <div class="md-step-bar-left"></div>
        <div class="md-step-bar-right"></div>
      </div>
      <div class="md-step ">
        <div class="md-step-circle"><span>3</span></div>
          <div class="md-step-title">Leveringstidspunkt</div>
        <div class="md-step-bar-left"></div>
        <div class="md-step-bar-right"></div>
      </div>
      <div class="md-step">
        <div class="md-step-circle"><span>4</span></div>
        <div class="md-step-title">Gennemført</div>
        <div class="md-step-bar-left"></div>
        <div class="md-step-bar-right"></div>
      </div>
    </div>
    </div>
</div>  
<div class="py-1" style="">
    <div class="container">
        <div class="row" >
            <div class="mx-auto p-4 col-lg-8 card">
               
                <form method="post" >

<div class="input-group mb-3">
    <input title="" type="date" asp-format="{0:dd/MM/yyyy}" asp-for="BookingViewModel.BookingTime" data-language='da'  class="form-control" id="span" placeholder="Leveringsdato">
    <div class="input-group-prepend">
        <span class="input-group-text" id="basic"><i class="fas fa-question"></i></span>
      </div>
</div>

                   <div class="input-group mb-3">
                      
                             <input asp-for="BookingViewModel.TotalPallets" type="number" class="form-control" id="paller" placeholder="Antal Paller">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic"><i class="fas fa-question"></i></span>
                      </div>
                </div>
                
                    <div class="form-group d-flex justify-content-center">
                        <button type="submit"   class="btn btn-lg btn-primary">Bekræft</button>
                     
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts
{


    <script> 

    
    $('#basic').click(function(){
        $(this).popover({
            title: 'Leveringsdato',
            content: 'Angiv venligst leveringsdatoen i dette felt. ',
            trigger: 'click',
            placement:'right',
            html: true
        }).popover('show');
        clickedAway = false
        isVisible = true
    });
    $(document).click(function() {
        if(isVisible & clickedAway){
            $('#basic').popover('hide')
        isVisible = clickedAway = false
        }else{
        clickedAway = true
        }
    });
    
    
    
    $('#paller').tooltip({'trigger':'focus', 'title': 'Angiv total antal paller på booking'  , 'placement': 'right'});
    
    </script>
}
