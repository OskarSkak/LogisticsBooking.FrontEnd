@page
@model LogisticsBooking.FrontEnd.Pages.Client.SuppliersModel
@{
}


<div class="py-5 text-center">
    <div class="container">
        <div class="row">
            <div class="mx-auto col-lg-5 col-md-7 col-10">
                <h1>Kunder</h1>
                <p class="mb-3">En liste over alle kunder, klik for at ændre en kunde</p>
            </div>
        </div>
        <div class="row">
            <div class="mx-auto col-lg-5 col-md-7 col-10">
                <a asp-page="/Client/Suppliers/Supplier_Create"><button class="btn btn-primary">Opret ny kunde</button></a>
            </div>
        </div>
    </div>
</div>

@if (Model.Suppliers.Suppliers.Any())
{
    

    <div class="py-5" style="">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="list-group" style="">
                        @foreach (var item in Model.Suppliers.Suppliers)
                        {
                            <text>
                                <a asp-page="./Supplier_Single" asp-route-id="@item.Name" class="list-group-item list-group-item-action display-spacebetween">@item.Name</a>
                            </text>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}