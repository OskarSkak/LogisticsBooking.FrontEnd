@page "{id}"
@using LogisticsBooking.FrontEnd.DataServices.Models
@using LogisticsBooking.FrontEnd.Pages.Transporter.Booking
@model LogisticsBooking.FrontEnd.Pages.Client.Bookings.BookingSingleModel

@{
    ViewData["Title"] = "Home page";
}

<style>
    #wrapper {
        text-align: center;
    }
    #yourdiv {
        display: inline-block;
    }
</style>

<div class="py-5 text-center">
    <div class="container">
        <div class="row">
            <div class="mx-auto col-lg-6 col-10">
                <h1>Booking fra @Model.Booking.transporterName</h1>
                <p class="mb-3">Opdater den ønskede information ved at redigere i det passende felt, og tryk derefter 'Opdater'</p>
                <form method="post" class="text-left">
                    <div class="form-group"> <label for="form18">Booking tid</label> <input asp-for="Booking.bookingTime" class="form-control" id="form18" name="ViewBookTime"> </div>
                    <div class="form-group"> <label for="form18">Antal paller</label> <input asp-for="Booking.totalPallets" class="form-control" id="form18" name="ViewPallets"> </div>
                    <div class="form-group"> <label for="form18">Port</label> <input asp-for="Booking.port" class="form-control" id="form18" name="ViewPort"> </div>
                    <div class="form-group"> <label for="form18">Faktisk ankomst</label> <input asp-for="Booking.actualArrival" type="time" class="form-control" id="form18" name="ViewActual"> </div>
                    <div class="form-group"> <label for="form18">Start læsning</label> <input asp-for="Booking.startLoading" type="time" class="form-control" id="form18" name="ViewStart"> </div>
                    <div class="form-group"> <label for="form18">Slut læsning</label> <input asp-for="Booking.endLoading" type="time" class="form-control" id="form18" name="ViewEnd"> </div>
                    <div class="form-group"> <label for="form18">Slut læsning</label> <input asp-for="Booking.endLoading" type="hidden" class="form-control" id="form18" name="ViewBookingId" value="@Model.Booking.internalId"> </div>
                    <input type="submit" asp-page-handler="Update" class="btn btn-primary" Opdater value="Opdater"/>
                    @if (User.IsInRole("admin"))
                    {
                        <input type="submit"  class="btn btn-primary"  value="Slet Transportør"/>
                    }
                </form>
            </div>
        </div>
    </div>
</div>


<div id="wrapper">
    <div id="yourdiv">
        <h2 style="position: center">Ordrer:</h2>
    </div>
</div>

<div class="py-5" style="">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="list-group" style="">
                    @if(@Model.Booking.Orders != null){
                    foreach (var order in @Model.Booking.Orders)
                    {
                        <a asp-page="./Order_Single" asp-route-id="@order.id" class="list-group-item list-group-item-action display-spacebetween">@order.orderNumber</a>
                    }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
