@page "{id}"
@using LogisticsBooking.FrontEnd.DataServices.Models
@using LogisticsBooking.FrontEnd.Pages.Transporter.Booking
@model LogisticsBooking.FrontEnd.Pages.Client.Bookings.OrderSingleModel

@{
    ViewData["Title"] = "Home page";
}

<style>
    .no-padding-marging {
        margin: !important 0;
        padding: !important 0;
    }
</style>

<div class="container">
    <div style="width:100%; margin:0 auto;">
        <table id="example" class="table table-striped table-bordered dt-responsive nowrap dataTable no-padding-marging" width="100%" cellspacing="0">
            <thead>
            <tr>
                <th>Bookings</th>
            </tr>
            </thead>
            <tbody>
            <tr class="no-padding-marging">
                <td class="no-padding-marging">
                    <div class="list-group no-padding-marging" style="">
                        <a asp-page="./Transporter_Single" asp-route-id="Test" class="list-group-item list-group-item-action display-spacebetween no-padding-marging">Test</a>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="list-group" style="">
                        <a asp-page="./Transporter_Single" asp-route-id="Test" class="list-group-item list-group-item-action display-spacebetween">Test</a>
                    </div>
                </td>
            </tr>
            </tbody>
        </table>
    </div>
</div>



@section Scripts{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.18/datatables.min.css" />

    <script>
        $(function () {
            $("#example").DataTable();
        });

    </script>

}