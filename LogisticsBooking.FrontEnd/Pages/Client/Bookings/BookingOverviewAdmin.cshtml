@page
@using LogisticsBooking.FrontEnd.DataServices.Models
@using LogisticsBooking.FrontEnd.Pages.Transporter.Booking
@model LogisticsBooking.FrontEnd.Pages.Client.Bookings.BookingOvervieAdminwModel

@{
    ViewData["Title"] = "Home page";
}

<style>
    .no-padding-marging {
        margin: !important 0;
        padding: !important 0;
    }
</style>

<div class="container">
    <div style="width:100%; margin:0 auto;">
        <table id="example" class="display" width="100%" cellspacing="0">
            <thead>
            <tr>
                <th>Bookings</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var booking in @Model.Bookings)
            {
            <tr class="no-padding-marging">
                <td>
                    <div class="list-group" style="">
                        <a asp-page="./BookingSingle" asp-route-id="@booking.internalId" class="list-group-item list-group-item-action display-spacebetween">
                            <div>@booking.bookingTime</div>
                            <div>PLACEHOLDER: SÆT BOOKINGID ind</div>
                            <div>@booking.transporterName</div>
                        </a>
                    </div>
                </td>
            </tr>
            }
            </tbody>
        </table>
    </div>
</div>



@section Scripts{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.18/datatables.min.css" />

    <script>
        $(function () {
            $("#example").DataTable();
        });

    </script>

}