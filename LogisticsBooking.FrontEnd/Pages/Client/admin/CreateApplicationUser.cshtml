@page
@model LogisticsBooking.FrontEnd.Pages.Client.admin.CreateApplicationUser


@if (Model.MessageIsNull) 
{
    <div class="alert alert-success" role="alert">
        <strong>@Model.Message </strong>
    </div>
}

<div class="container-fluid">
    <div class="row justify-content-between">
         <div class="col-xs-12 col-md-3">

            <div class="content ">
         
                <ul class="nav flex-column">
                       
                    <li class="nav-item">
                        <a asp-page="AdminOverview" class="nav-link">Overblik</a>
                                  
                    </li>
                    <div class="border-top my-3"></div>
                             
                    <li class="nav-item">
                        <a asp-page="AllUsers" class="nav-link">Alle brugere</a>
                    </li>
                    
                    <div class="border-top my-3"></div>
                    <li class="nav-item">
                        <a asp-page="CreateApplicationUser" class="nav-link">Opret Bruger</a>
                    </li>
                    <div class="border-top my-3"></div>
                             
                </ul>
          
              

         
            </div>

        </div>
        <div class="col-xs-12 col-md-5 ">

            <div class="content">
                
                <h1>Opret Bruger</h1>
                <form asp-page-handler="Create">
                    <div class="form-group">
                        <label >Navn</label>
                        <input asp-for="@Model.CreateUserCommand.Name" type="text" class="form-control" >
                    </div>
                    <div class="form-group">
                        <label >Email</label>
                        <input asp-for="@Model.CreateUserCommand.Email" type="email" class="form-control" >
                    </div>
                    <div class="form-group">
                    <select class="form-control" asp-for="CreateUserCommand.Role" asp-items="Model.Roles">
                                                    
                    </select>
</div>
                    
                    
                    <button type="submit" class="btn btn-primary">opret</button>
                </form>
                
            </div>

        </div>
        <div class="col-xs-12 col-md-1 ">
        </div>
    </div>
</div>