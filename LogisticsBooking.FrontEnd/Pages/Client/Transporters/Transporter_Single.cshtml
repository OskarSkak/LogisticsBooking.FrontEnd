@page "{id}"
@model LogisticsBooking.FrontEnd.Pages.Client.Transporters.Transporter_SingleModel
@{
}


<div class="py-5 text-center">
    <div class="container">
        <div class="row">
            <div class="mx-auto col-lg-6 col-10">
                <h1>Eksisterende Transportør</h1>
                <p class="mb-3">Opdater den ønskede information ved at redigere i det passende felt, og tryk derefter 'Opdater'</p>
                <form method="post" class="text-left">
                    <div class="form-group"> 
                        <label for="form16">Firma</label>
                        <input asp-for="transporter.Name" name="ViewName" class="form-control" />
                    </div>
                    <div class="form-group"> <label for="form18">Email</label> <input asp-for="transporter.Email" type="email" class="form-control" id="form18" name="ViewEmail"> </div>
                    <div class="form-group"> <label for="form18">Adresse</label> <input asp-for="transporter.Address" class="form-control" id="form18" name="ViewAddress"> </div>
                    <div class="form-group"> <label for="form18">Tel. nr</label> <input asp-for="transporter.Telephone" class="form-control" id="form18" name="ViewTelephone" > </div>
                    <input type="submit" asp-page-handler="Update" class="btn btn-primary" Opdater value="Opdater"/>
                    <a class="trigger_popup_fricc btn btn-primary">Slet</a>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="hover_bkgr_fricc centered">
    <span class="helper"></span>

    <div>
        <div class="popupCloseButton">X</div>
        <form asp-page-handler="delete" method="post">
            <p class="spaced-typography">Du er ved at slette transportør fra systemet. Dette er en permanent handling. Tryk 'bekræft' for at fortsætte. Tryk på krydset for at annullere.</p>
            <button class="btn btn-primary">Bekræft</button>
        </form>
    </div>
</div>

@section Scripts{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    

    <script>
        $(function () {
            $("#example").DataTable();
        });

    </script>

    <script>
        $(window).load(function () {
            $(".trigger_popup_fricc").click(function () {
                $('.hover_bkgr_fricc').show();
            });
            $('.hover_bkgr_fricc').click(function () {
                $('.hover_bkgr_fricc').hide();
            });
            $('.popupCloseButton').click(function () {
                $('.hover_bkgr_fricc').hide();
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            var options = {
                inlineCss: false
            };
            $("a.six").on("click", function (e) {
                e.preventDefault();
                $(this).simplePopup(options);
            });
        });
    </script>
}