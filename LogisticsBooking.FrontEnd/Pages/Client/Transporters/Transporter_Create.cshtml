@page
@model LogisticsBooking.FrontEnd.Pages.Client.Transporters.Transporter_CreateModel
@{
}

<div class="py-5 text-center">
    <div class="container">
        <div class="row">
            <div class="mx-auto col-lg-6 col-10">
                <h1>Ny Transportør</h1>
                <p class="mb-3">Formular til at oprette transportører i systemet</p>
                <form method="post" class="text-left">
                    <div class="form-group">
                        <label for="form16">Firma Navn</label> <input asp-for="@Model.TransporterCreateBuildModel.Name" type="text" class="form-control" id="form16" placeholder="xxxxxxxxx">
                    </div>
                    <div class="form-group">
                        <label for="form18">Email</label> <input asp-for="@Model.TransporterCreateBuildModel.Email" type="email" class="form-control" id="form18" placeholder="xxxx@mail.com">
                    </div>
                    <div class="form-group">
                        <label for="form18">Adresse</label> <input asp-for="@Model.TransporterCreateBuildModel.Address" class="form-control" id="form18" placeholder="xxxx xxxx, 0000x">
                    </div>
                    <div class="form-group">
                        <label for="form18">Tel. nr</label> <input asp-for="@Model.TransporterCreateBuildModel.Telephone" class="form-control" id="form18" placeholder="00000000">
                    </div>

                    <div class="form-group">

                    </div>

                    <button type="submit" class="btn btn-primary">Opret</button>

                </form>
            </div>
        </div>
    </div>
</div>